{
  "name": "actions",
  "version": "0.1.0",
  "description": "BrightSec Github actions",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build build/entrypoints/index.js -o dist/entrypoints",
    "prepare": "is-ci || husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NeuraLegion/actions.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NeuraLegion/actions/issues"
  },
  "homepage": "https://github.com/NeuraLegion/actions#readme",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^5.0.3",
    "@actions/http-client": "^2.2.3",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.17.0",
    "ncc": "^0.3.6"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.0.0",
    "prettier": "^2.6.2",
    "typescript": "^4.7.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
